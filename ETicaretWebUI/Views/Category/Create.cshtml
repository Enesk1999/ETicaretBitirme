@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kategori Ekle</h2>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name"/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-5">
            <label class="form-label" asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="row">
            <div class="col-2">
                <button class="btn btn-success" type="submit">Kategori Ekle</button>
            </div>
           <div class="col-3">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Index">Anasayfaya Dön</a>

           </div>
        </div>
        
    </div>
</form>