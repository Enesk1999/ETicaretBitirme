@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kategori Güncelle</h2>
        </div>
        <div class="mb-3">
            <label class="form-label">Kategori Adı</label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Gösterim Sırası</label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <button class="btn btn-success" type="submit">Kategori Ekle</button>
        <a asp-controller="Category" asp-action="Index">Anasayfaya Dön</a>
    </div>
</form>