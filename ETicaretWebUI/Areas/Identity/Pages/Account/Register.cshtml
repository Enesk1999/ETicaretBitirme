@page
@model RegisterModel


<style>
    .forBackground {
        background-color: #CCCCFF;
    }
</style>
<div class="forBackground">
    <div class="card-header border-0 shadow mt-4">
        <div class="card-header bg-primary bg-gradient m-0 mt-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-dark">Yeni Kullanıcı Kaydı</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Kullanıcı Bilgilerinizi Giriniz.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Eposta</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password">Parola</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                           
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.Name" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Name">Kullanıcı Adı</label>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.State" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.State">Ülke</label>
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.PhoneNumber">Telefon Numarası</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                                <select class="form-select" asp-for="Input.Role" asp-items="@Model.Input.RoleList">
                                    <option selected disabled>Lütfen Kullanıcı Rolünüzü Seçiniz</option>
                                </select>
                            </div>
                           
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.ConfirmPassword">Parola Doğrula</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                               <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.City" class="form-control" autocomplete="new-password" aria-required="true"  />
                                <label asp-for="Input.City">Şehir</label>
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                           
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.StreetAddress" class="form-control" autocomplete="new-password" aria-required="true"  />
                                <label asp-for="Input.StreetAddress">Sokak</label>
                                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.PostalCode" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.PostalCode">Posta Kodu</label>
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                          
                        </div>
                    </div>

                   
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Kaydol</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
