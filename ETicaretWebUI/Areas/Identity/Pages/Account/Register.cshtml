@page
@model RegisterModel


<div class="card border-0 shadow mb-4">
    <div class="card-header bg-secondary bg-gradient m-0 mt-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-primary">Yeni Kullanıcı Kaydı</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <div class="row mt-3">
        <div class="col-md-12">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 col-md-12">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Eposta</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Parola</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Parola Doğrula</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <select class="form-select" asp-for="Input.Role" asp-items="@Model.Input.RoleList">
                        <option selected disabled>Lütfen Kullanıcı Rolünüzü Seçiniz</option>
                    </select>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Kaydol</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
