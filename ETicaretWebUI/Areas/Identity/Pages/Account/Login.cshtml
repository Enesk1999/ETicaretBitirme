@page
@model LoginModel
<style>
    .forBackground{
        background-color: #CCCCFF;
    }
</style>
<div class="forBackground">
    <div class="card-header border-0 shadow mt-4">
        <div class="card-header bg-primary bg-gradient m-0 mt-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-dark">Kullanıcı Girişi</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-7">
                <section>
                    <form id="account" method="post">
                        <h2>Kullanıcı Bilgileriniz</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Eposta</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Parola</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Beni Hatırla?
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn  btn-primary">Giriş Yap</button>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p>
                                <a class="ms-2" id="forgot-password" asp-page="./ForgotPassword">Şifrenizi mi unuttunuz?</a>
                            </p>
                            <p>
                                <a class="ms-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni Kullanıcı Kaydı</a>
                            </p>
                            <p>
                                <a class="ms-2" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
