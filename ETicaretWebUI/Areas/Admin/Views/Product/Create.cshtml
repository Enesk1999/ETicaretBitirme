@model ProductViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient m-lg-0 py-3">
        <div class="row pb-2">
            <div class="col-12 text-center">
                <h2 class="text-light">Ürün Ekle</h2>

            </div>
        </div>
    </div>
</div>
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4 shadow-lg">
      
        <div class="form-floating py-2 mb-3 col-12">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.Title" />
            <label class="form-label fs-4" asp-for="@Model.Product.Title"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.Title"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.Author" />
            <label class="form-label fs-4" asp-for="@Model.Product.Author"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.Author"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.ISBN" />
            <label class="form-label fs-4" asp-for="@Model.Product.ISBN"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.ISBN"></span>
        </div>
        <div class="form-floating py-4 mb-5">
            <textarea class="form-control border-0 shadow" asp-for="@Model.Product.Description"></textarea>
            <label class="form-label fs-4" asp-for="@Model.Product.Description"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.Description"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.ListPrice" />
            <label class="form-label fs-4" asp-for="@Model.Product.ListPrice"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.ListPrice"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.Price" />
            <label class="form-label fs-4" asp-for="@Model.Product.Price"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.Price"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.Price50" />
            <label class="form-label fs-4" asp-for="@Model.Product.Price50"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.Price50"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" asp-for="@Model.Product.Price100" />
            <label class="form-label fs-4" asp-for="@Model.Product.Price100"></label>
            <span class="text-danger" asp-validation-for="@Model.Product.Price100"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <select class="form-select" asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList">
                <option disabled selected>Lütfen Kategori Seçiniz</option>
            </select>
            <label class="form-label fs-4" asp-for="Product.CategoryId"></label>
            <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
        </div>
        <div class="form-floating py-2 mb-5">
            <input class="form-control border-0 shadow" type="file" name="FileImageUrl" asp-for="Product.ImageUrl" />
            <label class="form-label fs-4" asp-for="Product.ImageUrl"></label>
        </div>
        <div class="row">
            <div class="col-2">
                <button class="btn btn-success" type="submit">Ürünü Ekle</button>
            </div>
           <div class="col-3">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Anasayfaya Dön</a>

           </div>
        </div>
        
    </div>
</form>

